    <p>8</p>
    <p>9</p>
    <p>23</p>
    <p>45</p>
    <p>78</p>
    <p>90</p>
    
    <script>
        $(function () {
            $("#position1").text('"' + $(window).scrollTop() + '"');
            $("input[name=number]").change(function () {
                $("#swich").toggleClass("myClass");
                $("#value").empty();
                $("#value").append($("input[name=number]").map(function () {
                    if ($(this).is(":checked")) {
                        return this.id;
                    }
                }).get().join(','));
                var elt = $("#value");
                var win = $(document);
                $("#value").prepend("height :" + win.height() + "<br>");
                $("#value").prepend("innerHeight:" + win.innerHeight() + "<br>");
                $("#value").prepend("outerHeight :" + win.outerHeight() + "<br>");
                alert("!");
                
            })
            $("#btn").click(function (event) {
                $("input[name=number]").trigger("change");
                event.preventDefault();
            })
            $(window).scroll(function () {
                $("#position1").text('"' + ($(window).scrollTop() + $(window).innerHeight()) + '"');
            })
            
        })

    </script>
</body>
</html>
